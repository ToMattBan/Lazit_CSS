{
  "name": "lazit-css",
  "version": "0.0.0",
  "description": "A tool, like a hammer, but for CSS. Based on InvertedTriangle Architecture",
  "scripts": {
    "build": "node ./build/build.cjs && npm run build:sass",
    "build:sass": "sass sass/main.scss public/main.css && npm run minify",
    "minify": "sass sass/main.scss public/main.min.css --style compressed"
  },
  "type": "module",
  "devDependencies": {
    "sass": "^1.63.4",
    "sass-mq": "^6.0.0"
  },
  "main": "public/main.min.css",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ToMattBan/Lazit_CSS.git"
  },
  "files": [
    "public/main.min.css"
  ],
  "keywords": [
    "css",
    "laz",
    "lazit",
    "lazit-css",
    "lazitcss",
    "lazit_css",
    "it",
    "myit",
    "my-itcss",
    "sass",
    "tool"
  ],
